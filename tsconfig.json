{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "target",
        "sourceMap": true,
        "allowJs": false,
        "strictNullChecks": false,
        "alwaysStrict": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
